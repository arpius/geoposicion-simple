<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#64FF08"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblPosicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/posicion"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/lblLatitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="#313131"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="5sp" />

    <TextView
        android:id="@+id/lblLongitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="#313131"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="5sp" />

    <TextView
        android:id="@+id/lblPrecision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="#313131"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="5sp" />

    <TextView
        android:id="@+id/lblAltitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="#313131"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="5sp" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="#313131"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="5sp" />

    <Button
        android:id="@+id/btnActivar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:text="@string/activar"
        android:textColor="#64ff08"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/btn_fondo" />

    <Button
        android:id="@+id/btnDesactivar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:text="@string/desactivar"
        android:textColor="#64ff08"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/btn_fondo" />

    <TextView
        android:id="@+id/lblEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estado"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/lblEstadoActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#313131"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="5sp" />

</LinearLayout>
